<% unless vms.empty? %>
  <div class="card mb-4">
    <%= link_to vms_path, method: :get, class: "dashboard-header-link" do %>
      <div class="card-header bg-primary text-white">
        <h3><i class="fa fa-desktop fa-fw"></i> <%= header %></h3>
      </div>
    <% end %>
    <div class="card-body">
      <%= render 'vms/table', {vms: vms, id: id, buttons: buttons,
        datatable_options: {searching: false, paging: false, info:false}} %>
    </div>
  </div>
<% end %>