<h1>Dashboard</h1>

<div class="row">
  <%# left column - VMs %>
  <div class="col-8">
    <%= render 'widget', {vms: @vms.slice(0...max_shown_vms), id: 'vms_active', header: 'Active VMs', buttons: nil} %>
    <%= render 'widget', {vms: @archivable.slice(0...max_shown_vms), id: 'vms_to_be_archived', header: 'Archivable VMs', buttons: nil} %>
    <%= render 'widget', {vms: @revivable.slice(0...max_shown_vms), id: 'vms_to_be_revived', header: 'Revivable VMs', buttons: nil} %>
  </div>

  <%# right column - notifications %>
  <div class="col-4">
    <div class="card mb-4">
      <div class="card-header bg-primary">
        <%= link_to notifications_path, class: "text-white" do %>
          <h3><%= fa_icon('bell') %> Notifications</h3>
        <% end %>
      </div>
      <div class="card-body">
        <%= render 'notifications/list' %>
      </div>
    </div>
  </div>
</div>
