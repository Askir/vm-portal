<h1 class="float-left">Servers</h1>

<input class="filter-box float-left ml-3 mt-2" type="text" id="filter" onkeyup="filterTable('filter', 'servers')" placeholder="Search servers">
<div class="clearfix">
  <% if current_user.admin? %>
    <%= link_to fa_icon('plus'), new_server_path,
      title: 'Create new server',
      :data => { toggle: 'tooltip', placement: 'left' },
      class: "btn btn-primary float-right" %>
  <% end %>
</div>

<table data-toggle="table" class="table" id="servers">
  <thead>
  <tr>
    <th scope="col" data-sortable="true">Name</th>
    <th scope="col" data-sortable="true">Vendor</th>
    <th scope="col" data-sortable="true">Model</th>
    <th scope="col" data-sortable="true">Responsible</th>
  </tr>
  </thead>
  <tbody>
  <% @servers.each do |server| %>
    <tr>
      <td class="table-active"><%= link_to server.name, server %></td>
      <td class="table-active"><%= server.vendor %></td>
      <td class="table-active"><%= server.model %></td>
      <td class="table-active"><%= server.responsible&.name %></td>
    </tr>
  <% end %>
  </tbody>
</table>