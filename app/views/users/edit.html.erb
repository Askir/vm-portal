<h1>User profile</h1>

<%# https://github.com/bootstrap-ruby/bootstrap_form %>
<%= bootstrap_form_for @user do |form| %>
  <%= form.alert_message "Please fix the errors below.", error_summary: false %> 

  <table class="table">
    <tbody>
      <tr>
        <td><%= User.human_attribute_name('email') %></td>
        <td><%= @user.email %></td>
      </tr>
      <tr>
        <td>Name</td>
        <td><%= @user.name %></td>
      </tr>
      <tr>
        <td><%= User.human_attribute_name('ssh_key') %></td>
        <td><%= form.text_area :ssh_key, rows: 8, id: 'sshKeyField', hide_label: true %></td>
      </tr>
      <tr>
        <td>E-Mail Preferences</td>
        <td><%= form.check_box :email_notifications, label: 'Receive E-Mail notifications' %></td>
      </tr>
    </tbody>
  </table>

  <%# https://github.com/bootstrap-ruby/bootstrap_form#submit-buttons %>
  <%= form.primary fa_icon('check', text: t('actions.save')),
    id: 'saveUserButton', extra_class: 'float-right', render_as_button: true %>

  <%= link_to fa_icon('close', text: t('actions.cancel')), user_path(@user),
    id: 'editUserButton', class: 'btn btn-danger float-right mr-3' %>
<% end %>
