<h1>User profile</h1>

<%= form_for @user do |form| %>
  <%= render 'layouts/form_errors', model: form.object %>

  <table class="table">
    <tbody>
      <tr>
        <td><%= User.human_attribute_name('email') %></td>
        <td><%= @user.email %></td>
      </tr>
      <tr>
        <td>Name</td>
        <td><%= @user.name %></td>
      </tr>
      <tr>
        <td><%= User.human_attribute_name('ssh_key') %></td>
        <td><%= form.text_area :ssh_key, class: 'form-control', rows: '8', id: 'sshKeyField' %></td>
      </tr>
      <tr>
        <td><%= User.human_attribute_name('email_notifications') %></td>
        <td><%= form.check_box :email_notifications %></td>
      </tr>
    </tbody>
  </table>

  <button type='submit',
  class='btn btn-primary float-right',
  id='saveUserButton'>
    <i class="fa fa-check"></i>
    <%= t('actions.save') %>
  </button>

  <%= link_to(fa_icon('close', text: t('actions.cancel')),
              user_path(@user),
              class: 'btn btn-danger float-right mx-3',
              id: 'editUserButton')
  %>
<% end %>
