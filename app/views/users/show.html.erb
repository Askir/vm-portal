<h1>User profile</h1><br>

<table class="table">
  <tbody>
    <tr>
      <td>Email</td>
      <td><%= @user.email%></td>
    </tr>
    <tr>
      <td>Name</td>
      <td><%= @user.name%></td>
    </tr>
  </tbody>
</table><br>

<% if @user == current_user %>
  <%= form_for @user do |f| %>
    <div class="form-group">
      <%= f.label :ssh_key %>
      <%= f.text_area :ssh_key, class: 'form-control', rows: '8', disabled: true, id: 'sshKeyField' %>
    </div>

    <button
      type="button"
      class="btn btn-primary float-right"
      id="editSshKey"
      onclick="enableSSHKeyField()"
    >
      <% if @user.ssh_key? %>
        <%= t('actions.edit') %>
      <% else %>
        <%= t('actions.add') %>
      <% end %>
    </button>
  <% end %>
<% end %>

