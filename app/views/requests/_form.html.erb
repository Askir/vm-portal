  </div>

  <div class="field">
    <%= form.label :ram_mb %>
    <%= form.number_field :ram_mb %>
  </div>

  <div class="field">
    <%= form.label :cpu_cores %>
    <%= form.number_field :cpu_cores %>
  </div>

  <div class="field">
    <%= form.label :software %>
    <%= form.text_field :software %>
  </div>

  <div class="field">
    <%= form.label :comment %>
    <%= form.text_field :comment %>
  </div>

  <div class="field">
    <%= form.label :accepted %>
    <%= form.check_box :accepted %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
