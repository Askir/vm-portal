<p id="notice"><%= notice %></p>

<h1>Requests</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Cpu-Cores</th>
      <th>MB RAM</th>
      <th>MB Storage</th>
      <th>Operating system</th>
      <th>Comment</th>
      <th>Status </th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @requests.each do |request| %>
      <tr>
        <td><%= request.name %></td>
        <td><%= request.cpu_cores %></td>
        <td><%= request.ram_mb %></td>
        <td><%= request.storage_mb %></td>
        <td><%= request.operating_system %></td>
        <td><%= request.comment %></td>
        <td><%= request.status %></td>
        <td><%= link_to 'Show', request %></td>
        <td><%= link_to 'Edit', edit_request_path(request) %></td>
        <td><%= link_to 'Destroy', request, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

