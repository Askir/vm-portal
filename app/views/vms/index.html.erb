      </td>
      <td class="table-active"><%= 'lorem' %></td>
      <td class="table-active"><%= 'ipsum' %>
        <% if current_user.admin? %>
          <%= link_to '',
            {controller: :vms, action: 'revive_vm', id: vm.name}, 
