<h1>Create a new Virtual Machine</h1>
<%= form_tag('/vms') do %>
  <div class="form-group">
    <%= label_tag 'Name' %>
    <%= text_field_tag 'name', nil, class: 'form-control', placeholder: 'My insanely cool VM' %>
  </div>
  <div class="form-group">
    <%= label_tag 'CPU' %>
    <%= text_field_tag 'cpu', nil, class: 'form-control', placeholder: '1 Core' %>
  </div>
  <div class="form-group">
    <%= label_tag 'RAM' %>
    <%= text_field_tag 'ram', nil, class: 'form-control', placeholder: '1024 MB' %>
  </div>
  <div class="form-group">
    <%= label_tag 'Capacity' %>
    <%= text_field_tag 'capacity', nil, class: 'form-control', placeholder: '10 GB' %>
  </div>
  <div ><%= submit_tag 'Create VM', class: "btn btn-primary" %></div>
<% end %>
