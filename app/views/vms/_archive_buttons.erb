<%if current_user.admin? && vm.archivable? %>
  <%= link_to '',
              {controller: :vms, action: 'archive_vm', id: vm.name},
              method: :post,
              data: { confirm: "Are you sure you want to archive the VM '#{vm.name}'?" },
              title: "Archive VM",
              class: "btn btn-primary btn-sm checkmark" %>
<% end %>
<%= link_to '',
            {controller: :vms, action: 'revive_vm', id: vm.name},
            method: :post,
            data: { confirm: "Are you sure you want to revive the VM '#{vm.name}'?" },
            title: "Revive VM",
            class: "btn btn-primary btn-sm cross" %>